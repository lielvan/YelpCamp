<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 mb-3 text-center">
            <h1>Create A New Campground</h1>
        </div>
        
        <div class="col-9 col-md-6 col-lg-6">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="name">Image</label>
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <label for="name">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location">
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>